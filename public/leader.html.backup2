        </div>

        <!-- STATISTICS VIEW -->
        <div id="statisticsView" class="view">
            <div class="statistics-container">
                <button class="back-btn" onclick="goToView('welcome')">
                    <i class="bi bi-arrow-left"></i> Volver al inicio
                </button>

                <div class="page-header">
                    <h2>
                        <i class="bi bi-graph-up-arrow"></i>
                        Estad√≠sticas y M√©tricas
                    </h2>
                </div>

                <!-- Stats Cards -->
                <div class="stats-grid-4">
                    <div class="stat-card-modern">
                        <div class="stat-icon primary">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <div class="stat-value" id="totalRegistrationsStat">0</div>
                        <div class="stat-label">Total Registros</div>
                    </div>

                    <div class="stat-card-modern">
                        <div class="stat-icon success">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="stat-value" id="confirmedStat">0</div>
                        <div class="stat-label">Confirmados</div>
                    </div>

                    <div class="stat-card-modern">
                        <div class="stat-icon warning">
                            <i class="bi bi-clock-fill"></i>
                        </div>
                        <div class="stat-value" id="pendingStat">0</div>
                        <div class="stat-label">Pendientes</div>
                    </div>

                    <div class="stat-card-modern">
                        <div class="stat-icon purple">
                            <i class="bi bi-percent"></i>
                        </div>
                        <div class="stat-value" id="confirmRateStat">0%</div>
                        <div class="stat-label">Tasa de Confirmaci√≥n</div>
                    </div>
                </div>

                <!-- Charts -->
                <div class="charts-row">
                    <div class="chart-card">
                        <h3>
                            <i class="bi bi-pie-chart-fill"></i>
                            Estado de Registros
                        </h3>
                        <canvas id="statusChart"></canvas>
                    </div>

                    <div class="chart-card">
                        <h3>
                            <i class="bi bi-bar-chart-fill"></i>
                            Registros por D√≠a (√öltimos 7 d√≠as)
                        </h3>
                        <canvas id="dailyChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SUCCESS MODAL -->
    <div class="modal-overlay" id="modalOverlay" onclick="closeSuccessModal()"></div>
    <div class="success-modal" id="successModal">
        <div class="success-icon">
            <i class="bi bi-check-lg"></i>
        </div>
        <h3>¬°Registro Exitoso!</h3>
        <p>La persona ha sido agregada correctamente a tu equipo</p>
        <button class="btn-primary" onclick="closeSuccessModal()">
            Aceptar
        </button>
    </div>

    <script>
        const API_URL = window.location.origin;
        let currentToken = localStorage.getItem('token');
        let currentLeaderId = localStorage.getItem('leaderId');
        let myRegistrations = [];
        let filteredRegistrations = [];
        let currentPage = 1;
        const itemsPerPage = 10;

        // ============== VIEW NAVIGATION ==============
        function goToView(viewName) {
            // Hide all views
            document.querySelectorAll('.view').forEach(view => {
                view.classList.remove('active');
            });

            // Show target view
            const targetView = document.getElementById(viewName + 'View');
            if (targetView) {
                targetView.classList.add('active');
                
                // Load data for specific views
                if (viewName === 'registrations') {
                    loadRegistrations();
                } else if (viewName === 'statistics') {
                    loadStatistics();
                }
            }
        }

        // ============== AUTH ==============
        function checkAuth() {
            if (!currentToken || !currentLeaderId) {
                window.location.href = '/';
                return false;
            }
            return true;
        }

        function logout() {
            if (confirm('¬øEst√°s seguro de que deseas cerrar sesi√≥n?')) {
                localStorage.removeItem('token');
                localStorage.removeItem('role');
                localStorage.removeItem('leaderId');
                window.location.href = '/';
            }
        }

        // ============== REGISTRATIONS ==============
        async function loadRegistrations() {
            try {
                const response = await fetch(`${API_URL}/api/registrations?leaderId=${currentLeaderId}`, {
                    headers: {
                        'Authorization': `Bearer ${currentToken}`
                    }
                });

                if (!response.ok) throw new Error('Error al cargar registros');

                const data = await response.json();
                myRegistrations = data.registrations || [];
                filteredRegistrations = [...myRegistrations];
                renderRegistrations();
            } catch (error) {
                console.error('Error:', error);
                alert('Error al cargar los registros');
            }
        }

        function renderRegistrations() {
            const tbody = document.getElementById('registrationsTableBody');
            const start = (currentPage - 1) * itemsPerPage;
            const end = start + itemsPerPage;
            const pageData = filteredRegistrations.slice(start, end);

            if (pageData.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" style="text-align: center; padding: 40px;">
                            <i class="bi bi-inbox" style="font-size: 48px; color: var(--text-muted);"></i>
                            <p style="margin-top: 12px; color: var(--text-muted);">No hay registros para mostrar</p>
                        </td>
                    </tr>
                `;
            } else {
                tbody.innerHTML = pageData.map(reg => `
                    <tr>
                        <td>${reg.name || ''}</td>
                        <td>${reg.email || ''}</td>
                        <td>${reg.cedula || ''}</td>
                        <td>${reg.phone || ''}</td>
                        <td>
                            <span class="badge ${reg.status === 'confirmed' ? 'badge-success' : 'badge-warning'}">
                                ${reg.status === 'confirmed' ? '‚úì Confirmado' : '‚è± Pendiente'}
                            </span>
                        </td>
                        <td>${new Date(reg.createdAt).toLocaleDateString()}</td>
                        <td>
                            <button class="action-btn action-btn-edit" onclick="editRegistration('${reg._id}')">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="action-btn action-btn-delete" onclick="deleteRegistration('${reg._id}')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `).join('');
            }

            updatePagination();
        }

        function updatePagination() {
            const totalPages = Math.ceil(filteredRegistrations.length / itemsPerPage);
            document.getElementById('currentPage').textContent = currentPage;
            document.getElementById('totalPages').textContent = totalPages;
            document.getElementById('prevPageBtn').disabled = currentPage === 1;
            document.getElementById('nextPageBtn').disabled = currentPage >= totalPages;
        }

        function previousPage() {
            if (currentPage > 1) {
                currentPage--;
                renderRegistrations();
            }
        }

        function nextPage() {
            const totalPages = Math.ceil(filteredRegistrations.length / itemsPerPage);
            if (currentPage < totalPages) {
                currentPage++;
                renderRegistrations();
            }
        }

        function refreshRegistrations() {
            loadRegistrations();
        }

        function exportToExcel() {
            alert('Funci√≥n de exportaci√≥n en desarrollo');
        }

        function editRegistration(id) {
            alert('Editar registro: ' + id);
        }

        function deleteRegistration(id) {
            if (confirm('¬øEst√°s seguro de eliminar este registro?')) {
                alert('Eliminar registro: ' + id);
            }
        }

        // Search and filter
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('searchInput');
            const filterStatus = document.getElementById('filterStatus');

            if (searchInput) {
                searchInput.addEventListener('input', (e) => {
                    const search = e.target.value.toLowerCase();
                    const status = filterStatus?.value || '';

                    filteredRegistrations = myRegistrations.filter(reg => {
                        const matchSearch = !search || 
                            (reg.name && reg.name.toLowerCase().includes(search)) ||
                            (reg.email && reg.email.toLowerCase().includes(search)) ||
                            (reg.cedula && reg.cedula.toLowerCase().includes(search));

                        const matchStatus = !status || reg.status === status;

                        return matchSearch && matchStatus;
                    });

                    currentPage = 1;
                    renderRegistrations();
                });
            }

            if (filterStatus) {
                filterStatus.addEventListener('change', () => {
                    searchInput.dispatchEvent(new Event('input'));
                });
            }
        });

        // ============== NEW REGISTRATION ==============
        async function handleSubmit(event) {
            event.preventDefault();

            const formData = {
                name: document.getElementById('fullName').value,
                email: document.getElementById('email').value,
                cedula: document.getElementById('cedula').value,
                phone: document.getElementById('phone').value,
                locality: document.getElementById('locality').value,
                leaderId: currentLeaderId
            };

            try {
                const response = await fetch(`${API_URL}/api/registrations`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${currentToken}`
                    },
                    body: JSON.stringify(formData)
                });

                if (!response.ok) throw new Error('Error al guardar');

                showSuccessModal();
                document.getElementById('newRegistrationForm').reset();
            } catch (error) {
                console.error('Error:', error);
                alert('Error al guardar el registro');
            }
        }

        function showSuccessModal() {
            document.getElementById('modalOverlay').classList.add('show');
            document.getElementById('successModal').classList.add('show');
        }

        function closeSuccessModal() {
            document.getElementById('modalOverlay').classList.remove('show');
            document.getElementById('successModal').classList.remove('show');
            goToView('registrations');
        }

        // ============== STATISTICS ==============
        let statusChart = null;
        let dailyChart = null;

        function loadStatistics() {
            // Calculate stats
            const total = myRegistrations.length;
            const confirmed = myRegistrations.filter(r => r.status === 'confirmed').length;
            const pending = total - confirmed;
            const confirmRate = total > 0 ? Math.round((confirmed / total) * 100) : 0;

            document.getElementById('totalRegistrationsStat').textContent = total;
            document.getElementById('confirmedStat').textContent = confirmed;
            document.getElementById('pendingStat').textContent = pending;
            document.getElementById('confirmRateStat').textContent = confirmRate + '%';

            // Status Chart
            const statusCtx = document.getElementById('statusChart');
            if (statusChart) statusChart.destroy();
            statusChart = new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Confirmados', 'Pendientes'],
                    datasets: [{
                        data: [confirmed, pending],
                        backgroundColor: ['#10b981', '#f59e0b'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });

            // Daily Chart (mock data)
            const dailyCtx = document.getElementById('dailyChart');
            if (dailyChart) dailyChart.destroy();
            dailyChart = new Chart(dailyCtx, {
                type: 'bar',
                data: {
                    labels: ['Lun', 'Mar', 'Mi√©', 'Jue', 'Vie', 'S√°b', 'Dom'],
                    datasets: [{
                        label: 'Registros',
                        data: [12, 19, 8, 15, 10, 3, 9],
                        backgroundColor: 'rgba(102, 126, 234, 0.8)',
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 5
                            }
                        }
                    }
                }
            });
        }

        // ============== INIT ==============
        window.addEventListener('DOMContentLoaded', () => {
            if (!checkAuth()) return;

            // Load leader name
            fetch(`${API_URL}/api/leaders/${currentLeaderId}`, {
                headers: { 'Authorization': `Bearer ${currentToken}` }
            })
            .then(res => res.json())
            .then(data => {
                if (data.leader) {
                    document.getElementById('leaderNameWelcome').textContent = data.leader.name || 'L√≠der';
                }
            })
            .catch(console.error);

            // Load initial data
            loadRegistrations();
        });
    </script>
</body>
</html>
