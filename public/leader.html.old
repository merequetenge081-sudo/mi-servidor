    <script>
        const API_URL = window.location.origin;
        let currentToken = localStorage.getItem('token');
        let currentLeaderId = localStorage.getItem('leaderId');
        let leaderData = null;
        let myRegistrations = [];
        let filteredRegistrations = [];
        let currentPage = 1;
        const itemsPerPage = 10;

        const SESSION_TIMEOUT_MS = 30 * 60 * 1000;
        const LAST_ACTIVITY_KEY = 'lastActivity';

        function touchActivity() {
            localStorage.setItem(LAST_ACTIVITY_KEY, Date.now().toString());
        }

        function isSessionExpired() {
            const last = parseInt(localStorage.getItem(LAST_ACTIVITY_KEY) || '0', 10);
            if (!last) return false;
            return Date.now() - last > SESSION_TIMEOUT_MS;
        }

        function enforceSessionTimeout() {
            if (!currentToken) return false;
            if (isSessionExpired()) {
                localStorage.removeItem('token');
                localStorage.removeItem('role');
                localStorage.removeItem('leaderId');
                window.location.href = '/';
                return true;
            }
            return false;
        }

        function bindSessionActivity() {
            ['mousemove', 'keydown', 'click', 'touchstart'].forEach(evt => {
                document.addEventListener(evt, touchActivity, { passive: true });
            });
        }

        let isRedirecting = false;

        // ============== AUTHENTICATION ==============
        function checkAuth() {
            if (isRedirecting) return false;
            if (!currentToken || !currentLeaderId) {
                isRedirecting = true;
                window.location.href = '/';
                return false;
            }
            return true;
        }

        // ============== HAMBURGER MENU ==============
        function toggleHamburgerMenu() {
            const menu = document.getElementById('hamburgerMenu');
            const overlay = document.getElementById('hamburgerOverlay');
            menu.classList.toggle('active');
            overlay.classList.toggle('active');
        }

        function closeHamburgerMenu() {
            const menu = document.getElementById('hamburgerMenu');
            const overlay = document.getElementById('hamburgerOverlay');
            menu.classList.remove('active');
            overlay.classList.remove('active');
        }

        // ============== NOTIFICATIONS SYSTEM ==============
        let notifications = [];

        function toggleNotificationsDropdown() {
            const dropdown = document.getElementById('notificationsDropdown');
            const isActive = dropdown.classList.contains('active');
            
            // Close help drawer if open
            closeHelpDrawer();
            
            if (isActive) {
                dropdown.classList.remove('active');
            } else {
                dropdown.classList.add('active');
                loadNotifications();
            }
        }

        function closeNotificationsDropdown() {
            const dropdown = document.getElementById('notificationsDropdown');
            dropdown.classList.remove('active');
        }

        function loadNotifications() {
            const body = document.getElementById('notificationsBody');
            const badge = document.getElementById('notificationBadge');
            
            const unreadCount = notifications.filter(n => !n.read).length;
            
            if (unreadCount > 0) {
                badge.textContent = unreadCount;
                badge.style.display = 'flex';
            } else {
                badge.style.display = 'none';
            }
            
            if (notifications.length === 0) {
                body.innerHTML = `
                    <div class="notifications-empty">
                        <i class="bi bi-bell-slash"></i>
                        <p style="margin: 12px 0 0 0; font-size: 14px;">No tienes notificaciones</p>
                    </div>
                `;
                return;
            }
            
            body.innerHTML = notifications.map(notif => {
                const iconClass = notif.type === 'info' ? 'bi-info-circle-fill' : 
                                 notif.type === 'warning' ? 'bi-exclamation-triangle-fill' : 
                                 'bi-exclamation-circle-fill';
                
                return `
                    <div class="notification-item ${notif.read ? '' : 'unread'}" onclick="markNotificationRead(${notif.id})">
                        <div class="notification-icon ${notif.type}">
                            <i class="bi ${iconClass}"></i>
                        </div>
                        <div class="notification-content">
                            <div class="notification-title">${notif.title}</div>
                            <div class="notification-message">${notif.message}</div>
                            <div class="notification-time">${notif.time}</div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function markNotificationRead(id) {
            const notification = notifications.find(n => n.id === id);
            if (notification) {
                notification.read = true;
                loadNotifications();
            }
        }

        function markAllNotificationsRead() {
            notifications.forEach(n => n.read = true);
            loadNotifications();
        }

        // Close notifications dropdown when clicking outside
        document.addEventListener('click', (e) => {
            const dropdown = document.getElementById('notificationsDropdown');
            const btn = document.getElementById('notificationsBtn');
            if (dropdown && !dropdown.contains(e.target) && !btn.contains(e.target)) {
                closeNotificationsDropdown();
            }
        });

        // ============== HELP DRAWER ==============
        function toggleHelpDrawer() {
            const drawer = document.getElementById('helpDrawer');
            const overlay = document.getElementById('helpOverlay');
            const isActive = drawer.classList.contains('active');
            
            // Close notifications dropdown if open
            closeNotificationsDropdown();
            
            if (isActive) {
                closeHelpDrawer();
            } else {
                drawer.classList.add('active');
                overlay.classList.add('active');
            }
        }

        function closeHelpDrawer() {
            const drawer = document.getElementById('helpDrawer');
            const overlay = document.getElementById('helpOverlay');
            drawer.classList.remove('active');
            overlay.classList.remove('active');
        }

        // ============== DARK MODE ==============
        function toggleDarkMode() {
            const isDark = document.body.classList.toggle('dark-mode');
            localStorage.setItem('darkMode', isDark ? 'enabled' : 'disabled');
        }

        // Restore dark mode on page load
        if (localStorage.getItem('darkMode') === 'enabled') {
            document.body.classList.add('dark-mode');
            const darkModeSwitch = document.getElementById('darkModeSwitch');
            if (darkModeSwitch) darkModeSwitch.checked = true;
        }

        // Initialize notifications on page load
        window.addEventListener('DOMContentLoaded', () => {
            loadNotifications();
        });

        function logout() {
            if (confirm('¿Estás seguro de que deseas cerrar sesión?')) {
                localStorage.removeItem('token');
                localStorage.removeItem('role');
                localStorage.removeItem('leaderId');
                window.location.href = '/';
            }
        }

        // ============== API CALLS ==============
        async function apiCall(endpoint, options = {}) {
            const headers = {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${currentToken}`,
                ...options.headers
            };

            const response = await fetch(`${API_URL}${endpoint}`, {
                ...options,
                headers
            });

            if (response.status === 401 && !isRedirecting) {
                isRedirecting = true;
                localStorage.removeItem('token');
                localStorage.removeItem('leaderId');
                window.location.href = '/';
                throw new Error('Session expired');
            }

            return response;
        }

        // ============== LOAD DATA ==============
        async function loadLeaderPanel() {
            try {
                // Load leader data
                const leaderRes = await apiCall(`/api/leaders/${currentLeaderId}`);
                if (!leaderRes.ok) throw new Error('Error cargando información del líder');

                leaderData = await leaderRes.json();
                document.getElementById('leaderName').textContent = leaderData.name || 'Líder';

                // Setup Link
                const registrationLink = `${API_URL}/form.html?token=${leaderData.token || leaderData.leaderId}`;
                document.getElementById('registrationLink').value = registrationLink;

                // Load registrations
                // Fix: Fetch specific registrations for this leader with high limit
                const regsRes = await apiCall(`/api/registrations?leaderId=${currentLeaderId}&limit=1000`);
                if (regsRes.ok) {
                    const allRegistrations = await regsRes.json();

                    if (Array.isArray(allRegistrations)) {
                        myRegistrations = allRegistrations.filter(r => r.leaderId === currentLeaderId);
                    } else if (allRegistrations.data && Array.isArray(allRegistrations.data)) {
                        myRegistrations = allRegistrations.data.filter(r => r.leaderId === currentLeaderId);
                    } else {
                        console.warn('Formato de registros inesperado', allRegistrations);
                        myRegistrations = [];
                    }
                } else {
                    console.error('Error cargando registros:', await regsRes.text());
                    myRegistrations = [];
                }

                // Init with all data
                filteredRegistrations = [...myRegistrations];
                updateStats();
                currentPage = 1;
                renderRegistrationsTable(); // Use new render function
            } catch (err) {
                console.error('Error loading panel:', err);
                document.getElementById('registrationsTable').innerHTML = `<tr><td colspan="9" class="text-center text-danger">Error de conexión: ${err.message}</td></tr>`;
            }
        }

        function updateStats() {
            const today = new Date().toDateString();
            const confirmedRegs = myRegistrations.filter(r => r.confirmed);
            const registrationsToday = myRegistrations.filter(r =>
                new Date(r.date).toDateString() === today
            );

            const total = myRegistrations.length;
            const confirmed = confirmedRegs.length;
            const rate = total > 0 ? ((confirmed / total) * 100).toFixed(1) : 0;

            document.getElementById('totalRegistrations').textContent = total;
            document.getElementById('registrationsToday').textContent = registrationsToday.length;
            document.getElementById('confirmedRegistrations').textContent = confirmed;
            document.getElementById('confirmationRate').textContent = rate + '%';
        }

        // ============== PAGINATION & RENDERING ==============
        function renderRegistrationsTable() {
            const totalPages = Math.ceil(filteredRegistrations.length / itemsPerPage) || 1;

            // Validate page bounds
            if (currentPage < 1) currentPage = 1;
            if (currentPage > totalPages) currentPage = totalPages;

            const start = (currentPage - 1) * itemsPerPage;
            const end = start + itemsPerPage;
            const pageData = filteredRegistrations.slice(start, end);

            const html = pageData.map(reg => `
                <tr>
                    <td><strong>${reg.firstName} ${reg.lastName}</strong></td>
                    <td>${reg.email || '-'}</td>
                    <td>${reg.cedula || '-'}</td>
                    <td>${reg.localidad || '-'}</td>
                    <td>${reg.votingPlace || '-'}</td>
                    <td>${reg.votingTable || '-'}</td>
                    <td>${new Date(reg.date).toLocaleDateString('es-CO')}</td>
                    <td>
                        <span class="badge ${reg.confirmed ? 'bg-success' : 'bg-warning'}">
                            ${reg.confirmed ? 'Confirmado' : 'Pendiente'}
                        </span>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn btn-sm btn-outline-secondary" title="${reg.confirmed ? 'Desconfirmar' : 'Confirmar'}" onclick="toggleConfirm('${reg._id}', ${reg.confirmed})">
                                <i class="bi bi-check-circle"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-primary" title="Editar" onclick="openEditModal('${reg._id}', '${reg.firstName}', '${reg.lastName}' , '${reg.email || ''}', '${reg.phone || ''}', '${reg.votingPlace || ''}', '${reg.votingTable || ''}')">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" title="Eliminar" onclick="deleteRegistration('${reg._id}')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `).join('');

            document.getElementById('registrationsTable').innerHTML = html || '<tr><td colspan="9" class="text-center text-muted">Sin registros</td></tr>';

            // Update Pagination Controls
            document.getElementById('pageIndicator').textContent = `Página ${currentPage} de ${totalPages}`;
            document.getElementById('prevPageBtn').disabled = currentPage === 1;
            document.getElementById('nextPageBtn').disabled = currentPage === totalPages;
        }

        function changePage(delta) {
            currentPage += delta;
            renderRegistrationsTable();
        }

        // ============== FILTERS ==============
        document.getElementById('searchInput').addEventListener('input', filterRegistrations);
        document.getElementById('filterStatus').addEventListener('change', filterRegistrations);

        function filterRegistrations() {
            const search = document.getElementById('searchInput').value.toLowerCase();
            const status = document.getElementById('filterStatus').value;

            filteredRegistrations = myRegistrations.filter(r => {
                const matchSearch = !search ||
                    r.firstName.toLowerCase().includes(search) ||
                    r.lastName.toLowerCase().includes(search) ||
                    r.email.toLowerCase().includes(search);

                const matchStatus = !status || (status === 'confirmed' ? r.confirmed : !r.confirmed);

                return matchSearch && matchStatus;
            });

            // Reset to page 1 when filtering
            currentPage = 1;
            renderRegistrationsTable();
        }

        // ============== ACTIONS ==============
        async function toggleConfirm(id, currentStatus) {
            try {
                const endpoint = currentStatus ? `/api/registrations/${id}/unconfirm` : `/api/registrations/${id}/confirm`;
                const res = await apiCall(endpoint, { method: 'POST' });
                if (res.ok) {
                    loadLeaderPanel();
                }
            } catch (err) {
                console.error('Error:', err);
            }
        }

        function copyLink() {
            const link = document.getElementById('registrationLink');
            link.select();
            document.execCommand('copy');
            alert('Link copiado al portapapeles');
        }

        function openForm() {
            const link = document.getElementById('registrationLink').value;
            window.open(link, '_blank');
        }

        function exportMyRegistrations() {
            try {
                if (!myRegistrations || myRegistrations.length === 0) {
                    alert('No hay registros para exportar. La tabla está vacía.');
                    return;
                }

                if (typeof XLSX === 'undefined') {
                    alert('Error: La librería de Excel no se ha cargado. Por favor revisa tu conexión a internet y recarga la página.');
                    return;
                }

                const data = myRegistrations.map(r => ({
                    'Nombre': `${r.firstName} ${r.lastName}`,
                    'Email': r.email || '',
                    'Cédula': r.cedula || '',
                    'Localidad': r.localidad || '',
                    'Puesto Votación': r.votingPlace || '',
                    'Mesa': r.votingTable || '',
                    'Teléfono': r.phone || '',
                    'Fecha': new Date(r.date).toLocaleDateString('es-CO'),
                    'Estado': r.confirmed ? 'Confirmado' : 'Pendiente'
                }));

                const ws = XLSX.utils.json_to_sheet(data);
                const wb = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(wb, ws, 'Mis Registros');

                // Safe filename generation
                const safeName = leaderData && leaderData.name ? leaderData.name.replace(/[^a-zA-Z0-9]/g, '_') : 'leader';
                XLSX.writeFile(wb, `mis_registros_${safeName}.xlsx`);
            } catch (err) {
                console.error('Export Error:', err);
                alert('Ocurrió un error al exportar: ' + err.message);
            }
        }

        // ============== QR MODAL ==============
        function openQrModal() {
            const qrContainer = document.getElementById('qrCodeContainer');
            qrContainer.innerHTML = ''; // Clear previous

            const link = document.getElementById('registrationLink').value;

            new QRCode(qrContainer, {
                text: link,
                width: 250,
                height: 250
            });

            document.getElementById('qrModal').style.display = 'block';
        }

        function closeQrModal() {
            document.getElementById('qrModal').style.display = 'none';
        }



        // ============== INIT ==============
        window.addEventListener('DOMContentLoaded', () => {
            if (enforceSessionTimeout()) return;
            touchActivity();
            bindSessionActivity();
            if (checkAuth()) {
                loadLeaderPanel();
            }
        });

        function downloadTemplate() {
            const headers = [
                ['Nombre', 'Apellido', 'Cédula', 'Email', 'Celular', 'Mesa', 'Localidad', 'Puesto Votación']
            ];

            // Remove example row - Create empty template
            const ws = XLSX.utils.aoa_to_sheet(headers);
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, "Plantilla");
            XLSX.writeFile(wb, "Plantilla_Registros.xlsx");
        }

        function handleImport(input) {
            const file = input.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function (e) {
                try {
                    const data = new Uint8Array(e.target.result);
                    const workbook = XLSX.read(data, { type: 'array' });
                    const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                    const jsonData = XLSX.utils.sheet_to_json(firstSheet);

                    if (jsonData.length === 0) {
                        alert("El archivo está vacío");
                        input.value = '';
                        return;
                    }

                    // Map keys to backend expected format
                    const registrations = jsonData.map(row => ({
                        firstName: row['Nombre'],
                        lastName: row['Apellido'],
                        cedula: row['Cédula'] || row['Cedula'], // Handle no accent
                        email: row['Email'],
                        phone: row['Celular'] || row['Telefono'],
                        votingTable: row['Mesa'],
                        localidad: row['Localidad'],
                        votingPlace: row['Puesto Votación'] || row['Puesto Votacion']
                    }));

                    // Send to backend
                    fetch(`${API_URL}/api/registrations/bulk`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${currentToken}`
                        },
                        body: JSON.stringify({
                            leaderId: currentLeaderId,
                            registrations: registrations
                        })
                    })
                        .then(response => response.json())
                        .then(data => {
                            input.value = ''; // Reset input
                            if (data.error) {
                                if (data.details) {
                                    // Show error modal
                                    const list = document.getElementById('errorList');
                                    list.innerHTML = '';
                                    data.details.forEach(err => {
                                        const li = document.createElement('li');
                                        li.textContent = `Fila ${err.row} - ${err.name}: ${err.error}`;
                                        list.appendChild(li);
                                    });
                                    document.getElementById('errorModal').style.display = 'block';
                                } else {
                                    alert(data.error);
                                }
                            } else {
                                showSuccessModal('¡Importación Exitosa!', data.message);
                                loadLeaderPanel(); // Reload table
                            }
                        })
                        .catch(err => {
                            console.error(err);
                            alert("Error de conexión al importar");
                            input.value = '';
                        });

                } catch (err) {
                    console.error(err);
                    alert("Error al leer el archivo Excel");
                    input.value = '';
                }
            };
            reader.readAsArrayBuffer(file);
        }

        // ================== EDIT & DELETE ACTIONS ==================

        // --- SUCCESS MODAL ---
        function showSuccessModal(title, message) {
            document.getElementById('successTitle').textContent = title;
            document.getElementById('successMessage').textContent = message;
            document.getElementById('successModal').style.display = 'block';
        }

        function closeSuccessModal() {
            document.getElementById('successModal').style.display = 'none';
        }

        // --- GENERIC ERROR MODAL ---
        function showGenericErrorModal(message) {
            document.getElementById('genericErrorMessage').textContent = message;
            document.getElementById('genericErrorModal').style.display = 'block';
        }

        function closeGenericErrorModal() {
            document.getElementById('genericErrorModal').style.display = 'none';
        }

        // --- DELETE CONFIRMATION ---
        let deleteId = null;

        function confirmDelete(id) {
            deleteId = id;
            document.getElementById('deleteConfirmModal').style.display = 'block';
        }

        function closeDeleteConfirmModal() {
            deleteId = null;
            document.getElementById('deleteConfirmModal').style.display = 'none';
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
            if (deleteId) {
                performDelete(deleteId);
            }
        });

        function performDelete(id) {
            fetch(`${API_URL}/api/registrations/${id}`, {
                method: 'DELETE',
                headers: {
                    'Authorization': `Bearer ${currentToken}`
                }
            })
                .then(res => res.json())
                .then(data => {
                    if (data.error) {
                        alert('Error: ' + data.error);
                    } else {
                        closeDeleteConfirmModal();
                        showSuccessModal('¡Eliminado!', 'La persona ha sido eliminada correctamente.');
                        loadLeaderPanel(); // Reload table
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert('Error al eliminar registro');
                    closeDeleteConfirmModal();
                });
        }

        // ================== EDIT & DELETE ACTIONS ==================

        function openEditModal(id, firstName, lastName, email, phone, place, table) {
            document.getElementById('editId').value = id;
            document.getElementById('editFirstName').value = firstName;
            document.getElementById('editLastName').value = lastName;
            document.getElementById('editEmail').value = email;
            document.getElementById('editPhone').value = phone;
            document.getElementById('editVotingPlace').value = place;
            document.getElementById('editVotingTable').value = table;

            document.getElementById('editModal').style.display = 'block';
        }

        function closeEditModal() {
            document.getElementById('editModal').style.display = 'none';
        }

        function saveEditRegistration(e) {
            e.preventDefault();
            const id = document.getElementById('editId').value;
            const data = {
                firstName: document.getElementById('editFirstName').value,
                lastName: document.getElementById('editLastName').value,
                email: document.getElementById('editEmail').value,
                phone: document.getElementById('editPhone').value,
                votingPlace: document.getElementById('editVotingPlace').value,
                votingTable: document.getElementById('editVotingTable').value
            };

            fetch(`${API_URL}/api/registrations/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${currentToken}`
                },
                body: JSON.stringify(data)
            })
                .then(res => res.json())
                .then(data => {
                    if (data.error) {
                        showGenericErrorModal(data.error);
                    } else {
                        closeEditModal();
                        showSuccessModal('¡Actualizado!', 'Los datos se han guardado correctamente.');
                        loadLeaderPanel(); // Reload table
                    }
                })
                .catch(err => {
                    console.error(err);
                    showGenericErrorModal('Error al actualizar registro');
                });
        }

        function deleteRegistration(id) {
            confirmDelete(id);
            return;

            fetch(`${API_URL}/api/registrations/${id}`, {
                method: 'DELETE',
                headers: {
                    'Authorization': `Bearer ${currentToken}`
                }
            })
                .then(res => res.json())
                .then(data => {
                    if (data.error) {
                        showGenericErrorModal(data.error);
                    } else {
                        closeDeleteConfirmModal();
                        showSuccessModal('¡Eliminado!', 'La persona ha sido eliminada correctamente.');
                        loadLeaderPanel(); // Reload table
                    }
                })
                .catch(err => {
                    console.error(err);
                    showGenericErrorModal('Error al eliminar registro');
                    closeDeleteConfirmModal();
                });
        }

        // Close modal if clicked outside
        window.onclick = function (event) {
            if (event.target == document.getElementById('qrModal')) {
                closeQrModal();
            }
            if (event.target == document.getElementById('errorModal')) {
                document.getElementById('errorModal').style.display = 'none';
            }
            if (event.target == document.getElementById('editModal')) {
                closeEditModal();
            }
            if (event.target == document.getElementById('successModal')) {
                closeSuccessModal();
            }
            if (event.target == document.getElementById('deleteConfirmModal')) {
                closeDeleteConfirmModal();
            }
            if (event.target == document.getElementById('genericErrorModal')) {
                closeGenericErrorModal();
            }
            if (event.target == document.getElementById('changePasswordModal')) {
                closeChangePasswordModal();
            }
        }

        // ============== PASSWORD MANAGEMENT ==============
        function openChangePasswordModal() {
            // Verificar si el líder puede cambiar contraseña
            fetch(`${API_URL}/api/leaders/${currentLeaderId}`, {
                headers: {
                    'Authorization': `Bearer ${currentToken}`
                }
            })
                .then(res => res.json())
                .then(data => {
                    if (data.passwordCanBeChanged === false && !data.isTemporaryPassword) {
                        document.getElementById('passwordChangeForm').style.display = 'none';
                        document.getElementById('passwordBlocked').style.display = 'block';
                    } else {
                        document.getElementById('passwordChangeForm').style.display = 'block';
                        document.getElementById('passwordBlocked').style.display = 'none';
                    }
                    document.getElementById('changePasswordModal').style.display = 'flex';
                })
                .catch(err => {
                    console.error(err);
                    showGenericErrorModal('Error al verificar estado de contraseña');
                });
        }

        function closeChangePasswordModal() {
            document.getElementById('changePasswordModal').style.display = 'none';
            document.getElementById('currentPassword').value = '';
            document.getElementById('newPassword').value = '';
            document.getElementById('confirmPassword').value = '';
            document.getElementById('passwordChangeAlert').style.display = 'none';
        }

        function showPasswordAlert(message, type) {
            const alert = document.getElementById('passwordChangeAlert');
            alert.textContent = message;
            alert.style.display = 'block';
            alert.style.background = type === 'success' ? '#d1e7dd' : '#f8d7da';
            alert.style.color = type === 'success' ? '#0f5132' : '#842029';
            alert.style.border = `1px solid ${type === 'success' ? '#badbcc' : '#f5c2c7'}`;
        }

        function changePassword() {
            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (!currentPassword || !newPassword || !confirmPassword) {
                showPasswordAlert('Por favor completa todos los campos', 'error');
                return;
            }

            if (newPassword.length < 6) {
                showPasswordAlert('La nueva contraseña debe tener al menos 6 caracteres', 'error');
                return;
            }

            if (newPassword !== confirmPassword) {
                showPasswordAlert('Las contraseñas no coinciden', 'error');
                return;
            }

            fetch(`${API_URL}/api/auth/leader-change-password`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${currentToken}`
                },
                body: JSON.stringify({ currentPassword, newPassword })
            })
                .then(res => res.json())
                .then(data => {
                    if (data.error) {
                        showPasswordAlert(data.error, 'error');
                    } else {
                        showPasswordAlert(data.message, 'success');
                        setTimeout(() => {
                            closeChangePasswordModal();
                            showSuccessModal('¡Contraseña actualizada!', 'Tu contraseña ha sido cambiada exitosamente. No podrás cambiarla nuevamente sin solicitar un reset al administrador.');
                        }, 1500);
                    }
                })
                .catch(err => {
                    console.error(err);
                    showPasswordAlert('Error al cambiar contraseña', 'error');
                });
        }

        function requestPasswordReset() {
            if (!confirm('¿Estás seguro de que deseas solicitar un reset de contraseña? El administrador te generará una nueva contraseña temporal.')) {
                return;
            }

            fetch(`${API_URL}/api/auth/request-password-reset`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ leaderId: currentLeaderId })
            })
                .then(res => res.json())
                .then(data => {
                    if (data.error) {
                        showGenericErrorModal(data.error);
                    } else {
                        closeChangePasswordModal();
                        showSuccessModal('¡Solicitud enviada!', 'El administrador ha sido notificado. Pronto recibirás una nueva contraseña temporal.');
                    }
                })
                .catch(err => {
                    console.error(err);
                    showGenericErrorModal('Error al solicitar reset de contraseña');
                });
        }
    </script>
