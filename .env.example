# Variables de Entorno - Ejemplo
# Rename this file to .env and configure with your actual values

# Base de Datos MongoDB
# Ejemplo local: mongodb://localhost:27017/mi-servidor
# Ejemplo MongoDB Atlas: mongodb+srv://user:pass@cluster.mongodb.net/mi-servidor
MONGO_URL=mongodb://localhost:27017/mi-servidor

# Secreto JWT para firmar tokens
# ⚠️ IMPORTANTE: Usa una cadena larga y aleatoria en producción
# Ejemplo: openssl rand -base64 32
JWT_SECRET=tu-secreto-jwt-muy-seguro-cambiar-en-produccion

# Puerto del servidor
# Default: 5000
PORT=5000

# Configuración de Email (Opcional)
# Para envío de notificaciones por email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-app

# Configuración de Twilio (Opcional)
# Para envío de SMS y WhatsApp
TWILIO_ACCOUNT_SID=tu-account-sid
TWILIO_AUTH_TOKEN=tu-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Entorno
# Valores: development, production
NODE_ENV=development
